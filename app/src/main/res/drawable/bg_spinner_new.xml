<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp" />
                    <solid android:color="#00000000" />
                    <stroke android:width="1.5dp" android:color="#c2c2c2" />
                    <padding
                        android:bottom="3dp"
                        android:top="3dp"/>
                </shape>
            </item>
            <item android:right="1dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_drop_down" />
            </item>
        </layer-list>
    </item>
</selector>