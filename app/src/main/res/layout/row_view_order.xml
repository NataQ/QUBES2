<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rrOrderList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r6"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/darkGray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/l5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.95"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtOrderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="0dp"
                    android:text="ENFAMIL RED GD 800 G 6'S"
                    android:textAllCaps="true"
                    android:textColor="@color/darkGray" />

                <TextView
                    android:id="@+id/txtOrderCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:text="MJI EFL 01"
                    android:textAllCaps="true"
                    android:textColor="@color/darkGray" />

                <!--</LinearLayout>-->
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearOrder1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/r1">

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="30"
                        android:text="@string/order"
                        android:textColor="@color/darkCyan" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="50"
                            android:focusableInTouchMode="true"
                            android:paddingRight="3dp">

                            <EditText
                                android:id="@+id/edtTxtQty1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_weight="35"
                                android:background="@drawable/edit_box_side_stroke"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxEms="4"
                                android:singleLine="true"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/superExtraSmallFont" />

                            <Spinner
                                android:id="@+id/q1Type"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="65"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/bg_spinner_new"
                                android:popupBackground="@drawable/editbox_popup"
                                android:gravity="center"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                app:spn_labelTextColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="50"
                            android:focusableInTouchMode="true"
                            android:paddingRight="8dp">

                            <EditText
                                android:id="@+id/edtTxtQty2"

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_weight="35"
                                android:background="@drawable/edit_box_side_stroke"
                                android:gravity="center_horizontal"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxEms="4"
                                android:singleLine="true"
                                android:textColor="@color/darkGray"
                                android:textSize="@dimen/superExtraSmallFont" />

                            <Spinner
                                android:id="@+id/q2Type"
                                android:theme="@style/ThemeOverlay.AppCompat.Light"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="65"
                                android:spinnerMode="dropdown"
                                android:background="@drawable/bg_spinner_new"
                                android:popupBackground="@drawable/editbox_popup"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                app:spn_labelTextColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:text="@string/jenisJual"
                        android:textColor="@color/darkCyan" />

                    <Spinner
                        android:id="@+id/spinnerJenisJual"
                        android:theme="@style/ThemeOverlay.AppCompat.Light"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="70"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/bg_spinner_new"
                        android:popupBackground="@drawable/editbox_popup"
                        android:overlapAnchor="false"
                        android:padding="7dp" />

                </TableRow>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearExpand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/storeCheck"
                            android:textColor="@color/darkCyan" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">

                            <TextView
                                android:id="@+id/txtViewQty1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/txtViewStockUom1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:text="-"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/txtViewQty2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/txtViewStockUom2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:text="-"
                                android:textColor="@color/darkGray" />
                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:text="@string/top"
                            android:textColor="@color/darkCyan" />

                        <TextView
                            android:id="@+id/txtViewTop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="0"
                            android:textColor="@color/darkGray" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:text="@string/disc"
                            android:textColor="@color/darkCyan" />

                        <TextView
                            android:id="@+id/txtViewDisc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="-"
                            android:textColor="@color/darkGray" />

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="30"
                            android:text="@string/orderTerakhir"
                            android:textColor="@color/darkCyan" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">

                            <TextView
                                android:id="@+id/textViewLastToDetailQty1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/textViewLastToDetailUom1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:text="-"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/textViewLastToDetailQty2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/textViewLastToDetailUom2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:text="-"
                                android:textColor="@color/darkGray" />

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="30"
                            android:text="@string/orderPlan"
                            android:textColor="@color/darkCyan" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">

                            <TextView
                                android:id="@+id/textViewOrderPlanQty1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/txtViewOrderPlanUom1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:text="-"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/textViewOrderPlanQty2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="35"
                                android:text="0"
                                android:textColor="@color/darkGray" />

                            <TextView
                                android:id="@+id/txtViewOrderPlanUom2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="65"
                                android:textColor="@color/darkGray" />
                        </LinearLayout>

                    </TableRow>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TableRow
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="30"
                                    android:text="@string/saranOrder"
                                    android:textColor="@color/darkCyan" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="70">

                                    <TextView
                                        android:id="@+id/txtViewSaranOrderQty1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="35"
                                        android:text="0"
                                        android:textColor="@color/darkGray" />

                                    <TextView
                                        android:id="@+id/txtViewSaranOrderUom1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="65"
                                        android:text="-"
                                        android:textColor="@color/darkGray" />

                                    <TextView
                                        android:id="@+id/txtViewSaranOrderQty2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="35"
                                        android:text="0"
                                        android:textColor="@color/darkGray" />

                                    <TextView
                                        android:id="@+id/txtViewSaranOrderUom2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="65"
                                        android:text="-"
                                        android:textColor="@color/darkGray" />
                                </LinearLayout>

                            </TableRow>
                        </LinearLayout>
                        //
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="30"
                                        android:text="@string/totalPrice"
                                        android:textColor="@color/darkCyan" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="40"
                                        android:id="@+id/txtTotalPrice"
                                        android:textColor="@color/darkGray" />

                                    <Button
                                        android:id="@+id/btnGetPrice"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/normalPadding"
                                        android:layout_weight="30"
                                        android:textAllCaps="false"
                                        android:background="@color/grey"
                                        android:text="@string/viewDetail"
                                        android:textColor="@color/white" />
                                </LinearLayout>
                            </TableRow>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/icDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_close" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>