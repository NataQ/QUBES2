<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Open Outlet"
            android:layout_margin="20dp"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/fragmentHeader" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp">

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/name"
                            android:textColor="@color/darkCyan"
                            android:id="@+id/textView3" />

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_weight="2">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/editbox"
                                android:hint="@string/materialName"
                                android:inputType="text"
                                android:padding="10dp"
                                android:id="@+id/editText" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="2"
                                android:background="@drawable/editbox"
                                android:hint="@string/materialName"
                                android:inputType="text"
                                android:padding="10dp"
                                android:id="@+id/editText2" />
                        </TableRow>


                    </TableRow>


                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/street1"
                            android:textColor="@color/darkCyan" />

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_weight="2">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="2"
                                android:background="@drawable/editbox"
                                android:hint="@string/materialName"
                                android:inputType="text"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textSize="22sp"
                                android:padding="15dp"
                                android:text="@string/no"
                                android:textColor="@color/darkCyan" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/editbox"
                                android:hint="123"
                                android:inputType="text"
                                android:padding="10dp" />
                        </TableRow>

                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/street2"
                            android:textColor="@color/darkCyan" />

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_weight="2">

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="2"
                                android:background="@drawable/editbox"
                                android:hint="@string/materialName"
                                android:inputType="text"
                                android:padding="10dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:textSize="22sp"
                                android:padding="15dp"
                                android:text="@string/no"
                                android:textColor="@color/darkCyan" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/editbox"
                                android:hint="123"
                                android:inputType="text"
                                android:padding="10dp" />
                        </TableRow>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/country"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/province"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/city"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/kecamatan"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/kelurahan"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/postalCode"
                            android:textColor="@color/darkCyan" />

                        <TableRow
                            android:layout_width="0dp"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.3"
                                android:hint="@string/materialName"
                                android:inputType="text"
                                android:padding="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:padding="15dp"
                                android:textSize="22sp"
                                android:text="@string/phone"
                                android:textColor="@color/darkCyan" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_columnWeight="0.5"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="0.6"
                                android:background="@drawable/editbox"
                                android:hint="123"
                                android:inputType="text"
                                android:padding="10dp" />
                        </TableRow>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/ktp"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:layout_weight="0.5"
                            android:padding="15dp"
                            android:text="@string/npwp"
                            android:textColor="@color/darkCyan" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="0.5"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="2"
                            android:background="@drawable/editbox"
                            android:hint="@string/materialName"
                            android:inputType="text"
                            android:padding="10dp" />
                    </TableRow>


                </TableLayout>

                <LinearLayout
                    android:layout_width="360dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center|bottom"
                    android:layout_weight="0.4"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="1"
                        android:background="@color/darkCyan"
                        android:text="@string/cancel"
                        android:textColor="@color/white" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/darkCyan"
                        android:text="@string/next"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>