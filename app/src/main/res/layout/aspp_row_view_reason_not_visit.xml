<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <TextView
        style="@style/TextView_Small"
        android:id="@+id/txtOutlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="outlet"
        android:textColor="@color/black_aspp"
        android:textStyle="bold" />

    <TextView
        style="@style/TextView_Small"
        android:id="@+id/txtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="address"
        android:textColor="@color/gray8_aspp" />

    <AutoCompleteTextView
        style="@style/TextView_Small"
        android:id="@+id/txtReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_spinner_2"
        android:completionThreshold="1"
        android:hint="Search..."
        android:padding="5dp"
        android:textColor="@color/gray8_aspp"
        android:textSize="@dimen/superSmallFont" />

    <EditText
        style="@style/TextView_Small"
        android:id="@+id/edtTxtOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/editbox"
        android:padding="5dp"
        android:textColor="@color/gray8_aspp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/editbox"
        android:gravity="center"
        android:minHeight="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgAddReason"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_add_photo" />

        <ImageView
            android:id="@+id/imgReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </LinearLayout>
</LinearLayout>