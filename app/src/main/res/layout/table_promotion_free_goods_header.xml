<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1">

        <!--row 1-->
        <TextView
            android:id="@+id/docNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_left"
            android:gravity="center"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Document No."
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kcNo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Kc No."
            android:textColor="@color/white"
            android:textStyle="bold" />


        <!--row 2-->

        <TextView
            android:id="@+id/validFrom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Valid From"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/validTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Valid To"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/customer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="4"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Customer"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="5"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="3"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Condition"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bonus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="6"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="4"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Bonus"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!--row 3-->

        <TextView
            android:id="@+id/salesDocTy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="7"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_center"
            android:gravity="center"
            android:padding="2dp"
            android:text="Sales Document Type"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!--row 4-->
        <TextView
            android:id="@+id/type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="8"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="@drawable/bg_table_promotion_right"
            android:gravity="center"
            android:padding="2dp"
            android:text="Type"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>
