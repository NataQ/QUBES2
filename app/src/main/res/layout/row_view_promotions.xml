<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TableRow
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:layout_weight="1">

        <!--row 1-->
        <TextView
            android:id="@+id/discName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:fontFamily="@font/montserrat_regular"
            android:ems="10"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/icStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />

        <!--row 2-->

        <TextView
            android:id="@+id/productId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="3"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/klasifikasi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="4"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/discValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="5"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="1.5"
            android:background="#FFFFFF"
            android:gravity="center" />

        <!--row 3-->

        <TextView
            android:id="@+id/outletName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="6"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />

        <!--row 4-->
        <TextView
            android:id="@+id/salesDocTY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="7"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />


        <TextView
            android:id="@+id/pmntTerms"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="8"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/minPScale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="9"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/perUom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="10"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="1.5"
            android:background="#FFFFFF"
            android:gravity="center" />

        <TextView
            android:id="@+id/noKc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="11"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="2"
            android:background="#FFFFFF"
            android:gravity="center" />


        <!--row 5-->
        <TextView
            android:id="@+id/validFromTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_column="12"
            android:fontFamily="@font/montserrat_regular"
            android:layout_weight="3"
            android:background="#FFFFFF"
            android:gravity="center" />


    </TableRow>


</LinearLayout>