<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/kode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/kode"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/superExtraSmallFont" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/lastO1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="@string/lastQ1"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/lastO2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="@string/lastQ1"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="3dp">

            <TextView
                android:id="@+id/lastS1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="@string/lastQ2"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/lastS2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="50"
                android:gravity="center_horizontal"
                android:text="@string/lastQ2"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:paddingRight="3dp">

            <EditText
                android:id="@+id/quantity1"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="35"
                android:background="@drawable/edit_box_side_stroke"
                android:gravity="center_horizontal"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxEms="4"
                android:singleLine="true"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <Spinner
                android:id="@+id/q1Type"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="65"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_new"
                android:popupBackground="@drawable/editbox_popup"
                android:gravity="center"
                android:overlapAnchor="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:paddingRight="8dp">

            <EditText
                android:id="@+id/quantity2"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="35"
                android:background="@drawable/edit_box_side_stroke"
                android:gravity="center_horizontal"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxEms="4"
                android:singleLine="true"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <Spinner
                android:id="@+id/q2Type"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="65"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_new"
                android:popupBackground="@drawable/editbox_popup"
                android:gravity="center"
                android:overlapAnchor="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />
        </LinearLayout>


        <Button
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/darkCyan"
            android:gravity="center"
            android:inputType="number"
            android:visibility="gone"
            android:singleLine="true"
            android:text="@string/getPrice"
            android:textColor="@color/white"
            android:textSize="@dimen/superExtraSmallFont" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/namaProduk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="-"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/superExtraSmallFont" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stockTersedia"
                android:textColor="@color/darkCyan"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/qty1AvaStock"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/uom1AvaStock"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/qty2AvaStock"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />

            <TextView
                android:id="@+id/uom2AvaStock"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/superExtraSmallFont" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/darkGray" />
</LinearLayout>