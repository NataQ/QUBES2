<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_log"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDate"
            style="@style/TextView_Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 August 2023"
            android:textColor="@color/gray8_aspp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/gray8_aspp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_clock"
            card_view:tint="@color/gray8_aspp" />

        <TextView
            android:id="@+id/txtTime"
            style="@style/TextView_Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="08:00"
            android:textColor="@color/gray8_aspp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtDesc"
        style="@style/TextView_Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sync master data success"
        android:textColor="@color/black_aspp" />
</LinearLayout><!--</androidx.cardview.widget.CardView>-->