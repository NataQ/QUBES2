<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_top_corner_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/subMenuTitle"
        style="@style/TextView_Tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="12dp"
        android:text="Setting"
        android:textAllCaps="true"
        android:textColor="@color/black_aspp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/layoutChangeIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_menu_setting"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/TextView_Small"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:gravity="center_vertical"
            android:text="Change Address IP"
            android:textColor="@color/gray8_aspp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/layoutRestoreDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_menu_setting"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            style="@style/TextView_Small"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="32dp"
            android:gravity="center_vertical"
            android:text="Restore DB"
            android:textColor="@color/gray8_aspp" />

    </LinearLayout>

</LinearLayout>