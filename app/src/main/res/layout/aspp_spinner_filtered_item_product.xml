<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvUncheck"
                android:layout_width="@dimen/icon_check_box"
                android:layout_height="@dimen/icon_check_box"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCheck"
                android:layout_width="@dimen/icon_check_box"
                android:layout_height="@dimen/icon_check_box"
                android:layout_margin="5dp"
                android:visibility="gone"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp">

                <ImageView
                    android:layout_width="@dimen/icon_check"
                    android:layout_height="@dimen/icon_check"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_checked_box" />

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/text"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/gray" />

</LinearLayout>

