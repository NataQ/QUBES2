<?xml version='1.0' encoding='utf-8'?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filterBy"
            android:textColor="@color/darkGray"
            android:textSize="@dimen/mediumFont"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:id="@+id/div"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/veryLightGray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearRow1"
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/txtRow1"
                android:text="@string/Period"
                android:textColor="@color/darkGray" />

            <Spinner
                android:id="@+id/spn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_new"
                android:popupBackground="@drawable/editbox_popup"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:id="@+id/div1"
            android:layout_height="1dp"
            android:background="@color/veryLightGray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearRow2"
            android:gravity="center_vertical"
            android:layout_margin="4dp"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb2"
                android:layout_marginEnd="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:id="@+id/txtRow2"
                android:textColor="@color/darkGray"
                android:text="@string/outlet" />

            <Spinner
                android:id="@+id/spn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_new"
                android:popupBackground="@drawable/editbox_popup"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/div2"
            android:background="@color/veryLightGray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical"
            android:id="@+id/linearRow3"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb3"
                android:layout_marginEnd="8dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/txtRow3"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:textColor="@color/darkGray"
                android:text="@string/DivProd" />

            <Spinner
                android:id="@+id/spn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_new"
                android:popupBackground="@drawable/editbox_popup"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/div3"
            android:background="@color/veryLightGray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:id="@+id/linearValidDate">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/valid"
                    android:textColor="@color/darkGray"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/darkGray"
                    android:text="@string/to"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtValidFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/editbox_filter"
                    android:focusable="false"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/darkGray"
                    android:inputType="date"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edtValidTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_marginStart="5dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/editbox_filter"
                    android:textColor="@color/darkGray"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="date"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="12dp"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/new_blue" />

