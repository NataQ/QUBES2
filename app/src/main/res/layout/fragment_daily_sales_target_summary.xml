<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Summary"
                android:textColor="@color/pureBlue"
                android:textSize="@dimen/fragmentHeader" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/l2"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/monthTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Sales"
                    android:textColor="@color/darkCyan"
                    android:textSize="@dimen/mediumFont" />

                <TextView
                    android:id="@+id/pointerM"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/darkCyan"
                    android:ems="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/customerTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Customer"
                    android:textColor="@color/darkCyan"
                    android:textSize="@dimen/mediumFont" />

                <TextView
                    android:id="@+id/pointerC"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/darkCyan"
                    android:ems="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Product"
                    android:textColor="@color/darkCyan"
                    android:textSize="@dimen/mediumFont" />

                <TextView
                    android:id="@+id/pointerP"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@color/darkCyan"
                    android:ems="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:text="Filter by"
                    android:textSize="20sp"
                    android:textColor="@color/grey" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_expand"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l2t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:padding="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Target"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reality"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:padding="12dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtDateDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />

        <TextView
            android:id="@+id/txtKodeDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kode"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />

        <TextView
            android:id="@+id/txtNameDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />

        <TextView
            android:id="@+id/txtTargetDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Target"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />

        <TextView
            android:id="@+id/txtRealityDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reality"
            android:textColor="@color/darkCyan"
            android:textSize="@dimen/mediumFont" />
    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/l2t"
        android:background="@color/darkCyan" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:padding="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:padding="10dp"
        android:visibility="invisible" />

