<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue5_aspp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_aspp"
        android:padding="12dp">

        <TextView
            style="@style/TextView_Qubes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_log_out" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_back_aspp" />

        <TextView
           style="@style/TextView_Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Create NOO"
            android:textColor="@color/black_aspp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:backgroundTint="@color/blue_aspp"
            app:cornerRadius="5dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/corner_fragment"
        app:cardElevation="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Detail Toko"
                        android:textColor="@color/black_aspp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llKTP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_add_image_alert"
                                android:gravity="center"
                                android:minHeight="100dp"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgAddKTP"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/ic_add_photo"
                                    android:backgroundTint="@color/blue_aspp" />

                                <ImageView
                                    android:id="@+id/imgKTP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxHeight="100dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="Foto KTP"
                                android:textColor="@color/black_aspp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llNPWP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/bg_add_image"
                                android:gravity="center"
                                android:minHeight="100dp"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgAddNPWP"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/ic_add_photo"
                                    android:backgroundTint="@color/blue_aspp" />

                                <ImageView
                                    android:id="@+id/imgNPWP"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxHeight="100dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="Foto NPWP"
                                android:textColor="@color/black_aspp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llOutlet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_add_image_alert"
                                android:gravity="center"
                                android:minHeight="100dp"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgAddOutlet"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/ic_add_photo"
                                    android:backgroundTint="@color/blue_aspp" />

                                <ImageView
                                    android:id="@+id/imgOutlet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:maxHeight="100dp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="8dp"
                                android:text="Foto Outlet"
                                android:textColor="@color/black_aspp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Nama Toko"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtNamaToko"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox_alert"
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Alamat"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox_alert"
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="GPS Location"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtGPSLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Kode Pos"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtKodePos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Desa Kelurahan"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtKelurahan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Kecamatan"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtKecamatan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Kota Kabupaten"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtKotaKabupaten"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Provinsi"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtProvinsi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Handphone / TLP"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/txtPhone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox_alert"
                            android:inputType="phone"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Nama NPWP"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtNamaNpwp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Alamat NPWP"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtAlamatNpwp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="No. NPWP"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtNoNpwp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Status NPWP"
                            android:textColor="@color/gray8_aspp" />

                        <TextView
                            android:id="@+id/spnStatusNpwp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_2"
                            android:completionThreshold="1"
                            android:hint="Search.."
                            android:padding="8dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@color/gray9_aspp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Detail Pemilik"
                        android:textColor="@color/black_aspp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Nama Pemilik"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/edtNamaPemilik"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox_alert"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="NIK"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/txtNIK"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox_alert"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Status Toko"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtStatusToko"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_2"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Lokasi"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/txtLokasi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Jenis Usaha"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/txtJenisUsaha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Lama Usaha"
                            android:textColor="@color/gray8_aspp" />

                        <EditText
                            android:id="@+id/txtLamaUsaha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/editbox"
                            android:padding="5dp"
                            android:textColor="@color/darkGray"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Suku"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtSuku"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Type Toko Outlet"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtTypeToko"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".6"
                            android:background="@drawable/bg_spinner_alert"
                            android:completionThreshold="1"
                            android:hint="Search..."
                            android:padding="5dp"
                            android:textColor="@color/black_aspp"
                            android:textSize="@dimen/superSmallFont" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".4"
                            android:text="Price List Type"
                            android:textColor="@color/gray8_aspp" />

                        <AutoCompleteTextView
                            android:id="@+id/txtPriceListType"
