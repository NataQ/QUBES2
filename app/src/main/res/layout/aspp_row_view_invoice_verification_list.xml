<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNo"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="center"
            android:text="No." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtCustomer"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Customer" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtInvoiceNo"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Invoice No" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtInvoiceDate"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Invoice Date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDueDate"
            style="@style/TextView_Small"
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Due Date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAmount"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Amount" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtPaid"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Paid" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtNett"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Nett" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtLabelRoute"
            style="@style/TextView_Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:background="@drawable/bg_label_non_route"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/red2_aspp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView_Small"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/light_gray"
        android:gravity="center" />

</LinearLayout>