        <!--                android:text="@string/apply"-->
        <!--                android:textAllCaps="true"-->
        <!--                android:textColor="@color/colorPrimary" />-->

        <!--        </RelativeLayout>-->
    </LinearLayout>
</androidx.cardview.widget.CardView>